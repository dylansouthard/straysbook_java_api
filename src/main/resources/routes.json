{
  "api": {
    "animals": {
      "_base": "/api/animals",
      "create": {
        "_path": "/api/animals",
        "methods": ["POST"]
      },
      "nearby": {
        "_path": "/api/animals/nearby",
        "methods": ["GET"]
      },
      "detail": {
        "_path": "/api/animals/:id",
        "methods": ["GET", "PATCH", "DELETE"]
      }
    },
    "users": {
      "_base": "/api/users",
      "detail": {
        "_path": "/api/users/:id",
        "methods": ["GET"]
      },
      "me": {
        "_path": "/api/users/me",
        "methods": ["GET", "PATCH", "DELETE"]
      },
      "status": {
        "_path": "/api/users/status",
        "methods": ["GET"]
      }
    },
    "auth": {
      "_base": "/api/auth",
      "status": {
        "_path": "/api/auth/status",
        "methods": ["GET"]
      },
      "refresh": {
        "_path": "/api/auth/refresh",
        "methods": ["POST"]
      },
      "revoke": {
        "_path": "/api/auth/revoke",
        "methods": ["DELETE"]
      },
      "revoke_all": {
        "_path": "/api/auth/revoke-all",
        "methods": ["DELETE"]
      }
    }
  }
}